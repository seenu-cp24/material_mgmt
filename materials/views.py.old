from django.shortcuts import render, redirect, get_object_or_404
from django.contrib import messages
from .models import Material
from .forms import MaterialForm

# -------------------------------
# Materials CRUD
# -------------------------------

def material_list(request):
    """List all materials"""
    materials = Material.objects.all().order_by('-created_at')
    return render(request, 'materials/material_list.html', {'materials': materials})


def add_material(request):
    """Add a new material or update quantity if it already exists"""
    if request.method == 'POST':
        form = MaterialForm(request.POST)
        if form.is_valid():
            name = form.cleaned_data['name']
            unit = form.cleaned_data['unit']
            quantity = form.cleaned_data['quantity']
            description = form.cleaned_data.get('description')

            # Check if material already exists with same name and unit
            material, created = Material.objects.get_or_create(
                name=name,
                unit=unit,
                defaults={'quantity': quantity, 'description': description, 'created_by': request.user}
            )

            if not created:
                # Material exists, update quantity
                material.quantity += quantity
                material.save()
                messages.success(request, f"‚úÖ Existing material '{name}' updated with additional {quantity} units.")
            else:
                messages.success(request, f"‚úÖ New material '{name}' added successfully!")

            return redirect('materials:material_list')
    else:
        form = MaterialForm()

    return render(request, 'materials/add_material.html', {'form': form})


def edit_material(request, material_id):
    """Edit material details"""
    material = get_object_or_404(Material, id=material_id)
    if request.method == 'POST':
        form = MaterialForm(request.POST, instance=material)
        if form.is_valid():
            form.save()
            messages.success(request, f"‚úèÔ∏è Material '{material.name}' updated successfully!")
            return redirect('materials:material_list')
    else:
        form = MaterialForm(instance=material)

    return render(request, 'materials/edit_material.html', {'form': form, 'material': material})


def delete_material(request, material_id):
    """Delete a material"""
    material = get_object_or_404(Material, id=material_id)
    material.delete()
    messages.success(request, f"üóëÔ∏è Material '{material.name}' deleted successfully!")
    return redirect('materials:material_list')


