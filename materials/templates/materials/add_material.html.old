{% extends 'base.html' %}

{% block title %}Add Material{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-primary mb-4 text-center">ðŸ“¥ Add New Material</h2>

        {% if form.errors %}
        <div class="alert alert-danger">
            <ul class="mb-0">
                {% for field in form %}
                    {% for error in field.errors %}
                        <li><strong>{{ field.label }}:</strong> {{ error }}</li>
                    {% endfor %}
                {% endfor %}
                {% for error in form.non_field_errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        <form method="POST" class="needs-validation" novalidate>
            {% csrf_token %}

            <div class="mb-3">
                <label for="id_name" class="form-label">Material Name</label>
                {{ form.name }}
            </div>

            <div class="mb-3">
                <label for="id_description" class="form-label">Description</label>
                {{ form.description }}
            </div>

            <div class="mb-3">
                <label for="id_quantity" class="form-label">Quantity</label>
                {{ form.quantity }}
            </div>

            <div class="mb-3">
                <label for="id_unit" class="form-label">Unit</label>
                {{ form.unit }}
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-success">ðŸ’¾ Save Material</button>
                <a href="{% url 'materials:material_list' %}" class="btn btn-secondary">â¬… Back to List</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
